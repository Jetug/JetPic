<resources>

    <!--    Jetug   -->

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme.Base">
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/color_action_bar_main</item>
        <item name="colorPrimaryDark">@color/color_action_bar_main</item>
        <item name="colorAccent">@color/color_accent</item>
        <!--        <item name="android:colorPrimaryDark">@color/color_action_bar_main</item>-->
    </style>


    <style name="AppTheme.ActionBar.Transparent.NoAnimation" parent="AppTheme.ActionBar.Transparent">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
<!--        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>-->
    </style>

    <!--    -->

    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#404040</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="FullScreenTheme.Base" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">16sp</item><!-- text size in menu-->
        <item name="android:textStyle">normal</item><!-- text size in menu-->
<!--        <item name="android:listPreferredItemHeightSmall">40dp</item>&lt;!&ndash; item size in menu&ndash;&gt;-->
    </style>

    <style name="FullScreenTheme" parent="FullScreenTheme.Base"/>
    <style name="Theme.SlideTest.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />
    <style name="Theme.SlideTest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
